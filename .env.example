# Canvas
CANVAS_BASE_URL=https://your-school.instructure.com
CANVAS_TOKEN=your_canvas_access_token

# Optional override: scope to a specific semester/term (Canvas enrollment_term_id).
# If blank, the sync auto-selects the largest `enrollment_term_id` it sees among active courses.
CANVAS_TERM_ID=

# Optional: token expiry countdown card
# If blank, first run will assume "today" and persist it to the state file.
CANVAS_TOKEN_CREATED_AT=2026-01-18
CANVAS_TOKEN_LIFETIME_DAYS=120

# Trello
TRELLO_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_api_token

# Pick ONE of these
TRELLO_BOARD_ID=
TRELLO_BOARD_URL=https://trello.com/b/SHORTLINK/board-name

# Optional
DUE_WITHIN_DAYS=30
POLL_INTERVAL_MINUTES=60
SYNC_STATE_FILE=data/canvas_trello_state.json
SYNC_ABORT_ON_BOARD_MISMATCH=0
